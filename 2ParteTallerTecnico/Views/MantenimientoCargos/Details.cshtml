@model _2tallertecnico.Models.Cargo

@{
    ViewData["Title"] = "Detalles del Cargo";
}

<div class="container mt-4">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4><i class="bi bi-info-circle"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.IdCargo</dd>

                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8"><strong>@Model.NombreCargo</strong></dd>

                    <dt class="col-sm-4">Descripción</dt>
                    <dd class="col-sm-8">@Model.Descripcion</dd>

                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">
                        @if (Model.Estado)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </dd>
                </dl>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.IdCargo" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
