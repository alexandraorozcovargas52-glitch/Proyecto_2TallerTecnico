@model _2tallertecnico.Models.Cargo

@{
    ViewData["Title"] = "Eliminar Cargo";
}

<div class="container mt-4">
    <div class="col-md-8 offset-md-2">
        <div class="card border-danger shadow">
            <div class="card-header bg-danger text-white">
                <h4><i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> ¿Está seguro que desea eliminar este cargo?
                    <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                </div>

                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.IdCargo</dd>

                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.NombreCargo</dd>

                    <dt class="col-sm-4">Descripción</dt>
                    <dd class="col-sm-8">@Model.Descripcion</dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdCargo" />
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
