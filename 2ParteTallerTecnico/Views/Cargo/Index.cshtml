@model IEnumerable<_2tallertecnico.Models.Cargo>

@{
    ViewData["Title"] = "Lista de Cargos";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Nuevo Cargo</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CargoId</td>
                    <td>@item.NombreCargo</td>
                    <td>@item.Descripcion</td>
                    <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CargoId" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.CargoId" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
