@model _2tallertecnico.Models.Cargo

@{
    ViewData["Title"] = "Editar Cargo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="bi bi-pencil"></i> @ViewData["Title"]</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Campo oculto para el ID -->
                        <input type="hidden" asp-for="IdCargo" />

                        <div class="mb-3">
                            <label asp-for="NombreCargo" class="form-label fw-bold"></label>
                            <input asp-for="NombreCargo" class="form-control" placeholder="Ingrese el nombre del cargo" />
                            <span asp-validation-for="NombreCargo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Describa las funciones del cargo"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Estado" class="form-check-input" type="checkbox" />
                            <label asp-for="Estado" class="form-check-label fw-bold">Activo</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Actualizar Cargo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
