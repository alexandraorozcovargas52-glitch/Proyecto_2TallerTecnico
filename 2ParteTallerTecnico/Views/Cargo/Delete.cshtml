@model _2tallertecnico.Models.Cargo

@{
    ViewData["Title"] = "Eliminar Cargo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i> @ViewData["Title"]
                    </h4>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i>
                        <strong>¿Está seguro que desea eliminar este cargo?</strong>
                        <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                    </div>

                    <dl class="row mt-3">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CargoId)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CargoId)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NombreCargo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreCargo)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Descripcion)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Descripcion)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
                        <dd class="col-sm-8">
                            @if (Model.Estado)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Activo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle"></i> Inactivo
                                </span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="CargoId" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
