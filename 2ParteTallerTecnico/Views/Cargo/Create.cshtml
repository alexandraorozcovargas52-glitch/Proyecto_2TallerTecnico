@model _2tallertecnico.Models.Cargo

@{
    ViewData["Title"] = "Crear Cargo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i> @ViewData["Title"]
                    </h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Nombre del Cargo -->
                        <div class="mb-3">
                            <label asp-for="NombreCargo" class="form-label fw-semibold"></label>
                            <input asp-for="NombreCargo" class="form-control" placeholder="Ej: Administrador" />
                            <span asp-validation-for="NombreCargo" class="text-danger"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción del cargo"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <!-- Estado -->
                        <div class="form-check mb-3">
                            <input asp-for="Estado" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Estado" class="form-check-label">Activo</label>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar Cargo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
