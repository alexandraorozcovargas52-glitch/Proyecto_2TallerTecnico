@model _2tallertecnico.Models.Persona

@{
    ViewData["Title"] = "Eliminar Persona";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="bi bi-exclamation-triangle"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>¿Está seguro que desea eliminar esta persona?</strong>
                        <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdPersona)</dd>

                        <dt class="col-sm-4">Nombre Completo</dt>
                        <dd class="col-sm-8"><strong>@Html.DisplayFor(model => model.NombreCompleto)</strong></dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefono)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaNacimiento)</dt>
                        <dd class="col-sm-8">
                            @if (Model.FechaNacimiento.HasValue)
                            {
                                @Model.FechaNacimiento.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-muted">No especificada</span>
                            }
                        </dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
                        <dd class="col-sm-8">
                            @if (Model.Estado)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdPersona" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirmar Eliminación
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
