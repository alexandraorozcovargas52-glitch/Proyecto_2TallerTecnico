@model IEnumerable<_2tallertecnico.Models.Persona>

@{
    ViewData["Title"] = "Lista de Personas";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2><i class="bi bi-person-lines-fill"></i> @ViewData["Title"]</h2>
            <hr />
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-12 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Crear Nueva Persona
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-lg">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark text-center">
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre Completo</th>
                                    <th>Teléfono</th>
                                    <th>Dirección</th>
                                    <th>Fecha Nacimiento</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.IdPersona</td>
                                            <td><strong>@(item.Nombre + " " + item.Apellido)</strong></td>
                                            <td>@item.Telefono</td>
                                            <td>@item.Direccion</td>
                                            <td>
                                                @if (item.FechaNacimiento.HasValue)
                                                {
                                                    @item.FechaNacimiento.Value.ToString("dd/MM/yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No especificada</span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Estado)
                                                {
                                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactivo</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.IdPersona" class="btn btn-sm btn-info" title="Ver Detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.IdPersona" class="btn btn-sm btn-warning" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.IdPersona" class="btn btn-sm btn-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-muted text-center">No hay personas registradas.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
