@model _2tallertecnico.Models.Persona

@{
    ViewData["Title"] = "Detalles de Persona";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4><i class="bi bi-person-vcard"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-12 text-center">
                            <i class="bi bi-person-circle" style="font-size: 5rem; color: #0dcaf0;"></i>
                            <h3 class="mt-2">@Model.NombreCompleto</h3>
                        </div>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdPersona)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Apellido)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefono)</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Telefono))
                            {
                                <i class="bi bi-telephone"></i>
                                @Html.DisplayFor(model => model.Telefono)
                            }
                            else
                            {
                                <span class="text-muted">No especificado</span>
                            }
                        </dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion)</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Direccion))
                            {
                                <i class="bi bi-geo-alt"></i>
                                @Html.DisplayFor(model => model.Direccion)
                            }
                            else
                            {
                                <span class="text-muted">No especificada</span>
                            }
                        </dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FechaNacimiento)</dt>
                        <dd class="col-sm-8">
                            @if (Model.FechaNacimiento.HasValue)
                            {
                                <i class="bi bi-calendar"></i>
                                @Model.FechaNacimiento.Value.ToString("dd/MM/yyyy")
                            }
                            else
                            {
                                <span class="text-muted">No especificada</span>
                            }
                        </dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Estado)</dt>
                        <dd class="col-sm-8">
                            @if (Model.Estado)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Activo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle"></i> Inactivo
                                </span>
                            }
                        </dd>
                    </dl>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al Listado
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.IdPersona" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
