@model _2tallertecnico.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h2>Detalles del Usuario</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.IdUsuario</dd>

            <dt class="col-sm-3">Usuario</dt>
            <dd class="col-sm-9">@Model.UsuarioNombre</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Model.Apellido</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Cargo</dt>
            <dd class="col-sm-9">@Model.NombreCargo</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.Estado)
                {
                    <span class="badge bg-success">Activo</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactivo</span>
                }
            </dd>

            <dt class="col-sm-3">Fecha de Registro</dt>
            <dd class="col-sm-9">@Model.Fecha_Registro?.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>